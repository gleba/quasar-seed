{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "target": "ES2017",
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "types": [
      "@types/node",
      "vite/client",
      "vite/vite-plugin-pwa/client",
      "fastify-express",
      "quasar",
      "@quasar"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "virtual:pwa-register": ["node_modules/vite-plugin-pwa"]
    },
//    "typeRoots": [
//      "./definitions",
//      "./definitions/*.d.ts",
//      "./definitions/index.d.ts"
//    ]
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
//    "definitions/global.d.ts.d.ts",
    "node_modules/vite-plugin-import-context/client.d.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
